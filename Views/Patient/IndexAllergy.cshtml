@model IEnumerable<WebApp_Hospital.Models.Patient>

@{
    ViewData["Title"] = "IndexAllergy";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Patient Identification</th>
            <th>Patient Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient_identification_card)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient_name)
                </td>
                <td>
                    <a asp-controller="Allergy" asp-action="Index" asp-route-id="@item.Patient_identification_card">Allergy Managment</a>
                </td>
            </tr>
        }
    </tbody>
</table>
