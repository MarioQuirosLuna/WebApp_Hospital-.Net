        <tr>
            <th>Doctor Identification</th>
            <td>@Html.DisplayFor(model => model.Doctor_code)</td>
        </tr>
        <tr>
            <th>Doctor Name</th>
            <td>@Html.DisplayFor(model => model.Doctor_name)</td>
