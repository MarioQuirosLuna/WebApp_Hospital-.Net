@model WebApp_Hospital.Models.Appointment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Fk_patient_identification_card" class="control-label">Patient Identification</label>
                <input asp-for="Fk_patient_identification_card" class="form-control" readonly />
                <span asp-validation-for="Fk_patient_identification_card" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient_name" class="control-label">Patient Name</label>
                <input asp-for="Patient_name" class="form-control" readonly />
                <span asp-validation-for="Patient_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor_name" class="control-label">Doctor Name</label>
                <input asp-for="Doctor_name" class="form-control" readonly />
                <span asp-validation-for="Doctor_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clinic_name" class="control-label">Clinic Name</label>
                <input asp-for="Clinic_name" class="form-control" readonly />
                <span asp-validation-for="Clinic_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_time" class="control-label">Date</label>
                <input asp-for="Date_time" class="form-control" readonly />
                <span asp-validation-for="Date_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Speciality" class="control-label">Speciality</label>
                <input asp-for="Speciality" class="form-control" readonly />
                <span asp-validation-for="Speciality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label">Diagnosis</label>
                <input asp-for="Diagnosis" class="form-control" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <span>@ViewBag.Mensaje</span>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Patient" asp-action="Index">Back to List</a>
</div>

