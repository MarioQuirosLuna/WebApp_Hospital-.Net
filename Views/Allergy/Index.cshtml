@model List<WebApp_Hospital.Models.Allergy>

@{
    ViewData["Title"] = "IndexAllergy";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.IdPatient">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Patient Name</th>
            <th>Allergy Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Allergy_name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
